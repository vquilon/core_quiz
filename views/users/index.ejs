<h2>Usuarios</h2>
<table>
	<% for(var i in users){ %>
		<tr>
			<td>
				<a href="/users/<%= users[i].id %>"><%= users[i].username%></a>
				<%=users[i].isAdmin ? "(admin)" : "" %>
			</td>
			<%if(session.user){%>
				<td>
					<a href="/users/<%= users[i].id %>/edit"><button>Editar</button></a>
				</td>
				<td>
					<a href="/users/<%= users[i].id %>?_method=DELETE" onClick="return confirm('Â¿ Quieres borrar la cuenta <%=users[i].id%>: <%=users[i].username%> ?');"><button>Borrar</button></a>
				</td>
			<%}%>
		</tr>
	<%};%>
</table>
<%if(session.user){%>
	<a href="/users/new"><button type="button">Crear usuario</button></a>
<%}%>