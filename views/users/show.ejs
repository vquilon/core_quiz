<h2>Usuario</h2>

<p>
	<b>Username:</b>
	<%=user.username%>
</p>

<p>
	<b>Es Administrador:</b>
	<%=user.isAdmin ? "Si" : "No"%>
</p>
<%if(session.user){%>
	<p>
		<%if(session.user.isAdmin || session.user.id === user.id){%>
			<a href="/users/<%= user.id %>/edit"><button type="button">Editar</button></a>
		<%}%>
		<%if(session.user.isAdmin && session.user.id !== user.id){%>
			<a href="/users/<%= user.id %>?_method=DELETE" onClick="return confirm('Â¿ Quieres borrar la cuenta <%=user.id%>: <%=user.username%> ?');"><button>Borrar</button></a>
		<%}%>
	</p>
<%}%>
<a href="/users"><button type="button">Volver</button></a>